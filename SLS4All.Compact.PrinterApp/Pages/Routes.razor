<Router AppAssembly="@typeof(StartupBase).Assembly" AdditionalAssemblies="[typeof(Program).Assembly]">
    <Found Context="routeData">
        <RedirectingAuthorizingRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <RedirectToLogin />
            </NotAuthorized>
        </RedirectingAuthorizingRouteView>
        <FocusOnNavigate RouteData="routeData" Selector=".route-focus" />
    </Found>
</Router>

@code{
    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}