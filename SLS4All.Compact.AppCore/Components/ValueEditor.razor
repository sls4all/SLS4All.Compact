                                        Enter
                                    </ValueEditorKey>
                                </div>
                            }
                            else if (Traits.IsUpperAlphanumeric)
                            {
                                <div class="d-flex">
                                    <ValueEditorKey class="key-small" Value="1" />
                                    <ValueEditorKey class="key-small" Value="2" />
                                    <ValueEditorKey class="key-small" Value="3" />
