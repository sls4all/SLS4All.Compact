                        }
                        @if (!string.IsNullOrWhiteSpace(_error))
                        {
                            <span class="row badge badge-danger value-error text-wrap">
                                <i class="bi bi-exclamation-octagon" />&nbsp;@_error
                            </span>
                        }
                    </div>
                </CascadingValue>
            </div>
        </div>
    </Modal>
