                                                    {
                                                        <td class="status-value col">
                                                            @if (progressRemaining != null)
                                                            {
                                                                var value = progressRemaining.Value;
                                                                (var hours, var minutes) = value.ToHoursAndMinutes();
                                                                @if (progressStatus?.Estimate.Incomplete == true)
                                                                {
