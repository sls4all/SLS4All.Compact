@using System.Numerics
@using SLS4All.Compact.Graphics
@inherits LayoutComponentBase
@implements IMainLayout
@inject NavigationManager Navigation

<CascadingValue Value="(IMainLayout)this" IsFixed="true">
    @Body
</CascadingValue>

@code {
    public Vector2 Scale => Vector2.One;
    public bool IsLocalSession => false;
    public RgbaF BackgroundColor => default;
    public bool IsDeveloperMode
    {
        get => false;
        set { }
    }

    public void SetTitle(PrinterPageTitle? title)
    {
    }

    public Task AppExitShowLoader()
        => Task.CompletedTask;

    public Task BrowseFiles()
        => Task.CompletedTask;

    public string GetReloadUri(bool forceReload, string? relative = null)
    {
        string queryString = Navigation.Uri;
        return queryString;
    }
}
